{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    },
    "outDir": "dist",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "module": "NodeNext",
    "target": "ESNext"
  },
  "include": ["src"]
}
